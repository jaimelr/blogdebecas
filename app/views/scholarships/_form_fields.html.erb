<div>
  <%= form.label 'Título de la beca' %>
  <%= form.text_field :title, class: 'form__input form__text' %>
</div>
<div>
  <%= form.label 'Descripción' %>
  <%= form.text_area :description, class: 'form__input form__text' %>
</div>
<div class="form__dates">
  <div>
    <%= form.label 'Fecha de inicio' %>
    <%= form.date_field :start, class: 'form__input' %>
  </div>
  <div>
    <%= form.label 'Fecha de termino' %>
    <%= form.date_field :end, class: 'form__input' %>
  </div>
</div>
<div>
  <%= form.label 'Link a convocatoria completa' %>
  <%= form.text_field :source, class: 'form__input form__text' %>
</div>
<div>
  <%= form.label 'Categoría' %>
  <%= form.select :category_id, options_from_collection_for_select(@categories, 'id', 'name') %>
</div>
<div>
  <%= form.label 'Beneficios' %>
  <%= form.text_field :benefits, class: 'form__input form__text' %>
</div>
<div>
  <%= form.label 'Requisitos' %>
  <ul>
    <% @scholarship.requirements.each do |requirement| %>
      <li>
        <%= requirement.name %>
        <%= link_to requirement_path(requirement.id, scholarship_id: @scholarship.id), method: :delete do %>
          <% fa_icon 'trash'%>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
<%= form.submit submit_text, class: 'form__submit' %>
